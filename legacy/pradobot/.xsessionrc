# xsession sources this script instead of executing it, so don't use
# 'exit' here.

logo_path="/usr/share/backgrounds/NVIDIA_Login_Logo.png"
# Set NVIDIA Logo after user login to desktop
if [ -x "/usr/bin/xsetbg" ] && [ -r "${logo_path}" ]; then
	xsetbg -center "${logo_path}" -border black
fi

# Set screensaver as blank
if [ -x "/usr/bin/xset" ]; then
	xset s blank s noexpose
fi

# Apply following settings at first login
if [ ! -f "/home/${USER}/.local/share/applications/nv_desktop_init" ]; then
	# Set NV desktop entries as trusted
	if [ "$(lsb_release -cs)" == "bionic" ]; then
		trusted_val="yes"
	else
		trusted_val="true"
	fi

	if [ -f "/home/${USER}/Desktop/nv_l4t_readme.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/nv_l4t_readme.desktop"
		gio set "/home/${USER}/Desktop/nv_l4t_readme.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -f "/home/${USER}/Desktop/gnome-terminal.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/gnome-terminal.desktop"
		gio set "/home/${USER}/Desktop/gnome-terminal.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -f "/home/${USER}/Desktop/nv_devzone.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/nv_devzone.desktop"
		gio set "/home/${USER}/Desktop/nv_devzone.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -f "/home/${USER}/Desktop/nv_forums.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/nv_forums.desktop"
		gio set "/home/${USER}/Desktop/nv_forums.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -f "/home/${USER}/Desktop/nv_jetson_projects.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/nv_jetson_projects.desktop"
		gio set "/home/${USER}/Desktop/nv_jetson_projects.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -f "/home/${USER}/Desktop/nv_jetson_zoo.desktop" ]; then
		chmod +x "/home/${USER}/Desktop/nv_jetson_zoo.desktop"
		gio set "/home/${USER}/Desktop/nv_jetson_zoo.desktop" "metadata::trusted" "${trusted_val}"
	fi

	if [ -e "/usr/bin/gnome-shell" ]; then
		remove_apps=("thunderbird" "rhythmbox" "libreoffice-writer")
		favorite_apps="$(gsettings get org.gnome.shell favorite-apps)"

		for app in "${remove_apps[@]}"; do
			favorite_apps="$(echo "${favorite_apps}" | \
				sed -e "s/'${app}.desktop', //g" -e "s/, '${app}.desktop' / /g")"
		done

		gsettings set org.gnome.shell favorite-apps "${favorite_apps}"
	fi

	mkdir -p "/home/${USER}/.local/share/applications"
	touch "/home/${USER}/.local/share/applications/nv_desktop_init"
fi
